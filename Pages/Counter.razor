@page "/counter"

<PageTitle>Playlist Random</PageTitle>

<h1>🎵 Playlist del giorno</h1>

<p>Clicca il pulsante per vedere una playlist casuale!</p>

<button class="btn btn-primary" @onclick="ShowRandomPlaylist">Mostra playlist</button>

@if (selectedPlaylist != null)
{
    <p>
        <a href="@selectedPlaylist" target="_blank" class="btn btn-success">
            Ascolta playlist
        </a>
    </p>
}

@code {
    private string[] playlists = new[]
    {
        "<iframe data-testid=\"embed-iframe\" style=\"border-radius:12px\" src=\"https://open.spotify.com/embed/playlist/37i9dQZF1DX0XUsuxWHRQd?utm_source=generator\" width=\"100%\" height=\"352\" frameBorder=\"0\" allowfullscreen=\"\" allow=\"autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture\" loading=\"lazy\"></iframe>",
        "<iframe data-testid=\"embed-iframe\" style=\"border-radius:12px\" src=\"https://open.spotify.com/embed/playlist/37i9dQZF1DWXU2naFUn37x?utm_source=generator\" width=\"100%\" height=\"352\" frameBorder=\"0\" allowfullscreen=\"\" allow=\"autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture\" loading=\"lazy\"></iframe>",
        "<iframe data-testid=\"embed-iframe\" style=\"border-radius:12px\" src=\"https://open.spotify.com/embed/playlist/37i9dQZF1DWSxF6XNtQ9Rg?utm_source=generator\" width=\"100%\" height=\"352\" frameBorder=\"0\" allowfullscreen=\"\" allow=\"autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture\" loading=\"lazy\"></iframe>"
    };

    private string? selectedPlaylist;

    private void ShowRandomPlaylist()
    {
        var random = new Random();
        selectedPlaylist = playlists[random.Next(playlists.Length)];
    }
}



